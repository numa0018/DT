SELECT
c.crt_id,
c.delete_flg,
i.item_id,
i.item_name,
i.price,
i.image,
s.customer_id,
FROM
cart c
LEFT JOIN
item i
ON
c.item_id = i.item_id 
LEFT JOIN
session s
ON
c.customer_no = s.customer_no
WHERE
s.customer_id = 1 AND c.delete_flg = 0 






SELECT
SUM( i.price ) AS totalPrice
FROM
cart c
LEFT JOIN
item i
ON
c.item_id = i.item_id 
LEFT JOIN
session s
ON
c.customer_no = s.customer_no
WHERE
s.customer_id = 1 AND c.delete_flg = 0 


